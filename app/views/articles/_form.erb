<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@article.errors.count, "error") %> prevented this article from saving:</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :body %><br>
  <%= f.text_area :body, :size => "60x30" %><br>
  <br>
  <%= f.submit %>
<% end %>